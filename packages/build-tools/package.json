{
  "name": "@mni/build-tools",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "fonts": "bun run ./generateFonts.ts && fantasticon -n mni -p mni ../static/icons -o ../static/fonts && rm -r fontIcons",
    "optimize": "bun run ./optimizeIcons.ts",
    "build:icons": "rm -r ../static/icon-nodes.json && bun run ./buildIcons.ts && bun run ./generateIconNodes.ts"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "bun-types": "latest",
    "fantasticon": "^2.0.0",
    "minimist": "^1.2.8",
    "svgo": "^3.2.0",
    "svgson": "^5.3.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}